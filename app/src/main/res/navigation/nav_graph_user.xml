<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_user"
    app:startDestination="@id/nav_list_product">

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.example.plantshop.ui.user.UserProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_user_profile" />

    <fragment
        android:id="@+id/nav_cart"
        android:name="com.example.plantshop.ui.user.CartFragment"
        android:label="Cart"
        tools:layout="@layout/fragment_cart" />

    <fragment
        android:id="@+id/nav_checkout"
        android:name="com.example.plantshop.ui.user.CheckoutFragment"
        android:label="Checkout"
        tools:layout="@layout/fragment_checkout" />

    <fragment
        android:id="@+id/nav_product_detail"
        android:name="com.example.plantshop.ui.user.ProductDetailFragment"
        android:label="Product Detail"
        tools:layout="@layout/fragment_product_detail" />

    <fragment
        android:id="@+id/nav_list_product"
        android:name="com.example.plantshop.ui.user.ListProductFragment"
        android:label="Home"
        tools:layout="@layout/fragment_list_product" />

    <fragment
        android:id="@+id/nav_order_success"
        android:name="com.example.plantshop.ui.user.OrderSuccessFragment"
        android:label="Order Success"
        tools:layout="@layout/fragment_order_success" />
    <fragment
        android:id="@+id/nav_notification"
        android:name="com.example.plantshop.ui.user.UserNotificationFragment"
        android:label="Notification"
        tools:layout="@layout/fragment_user_notification"/>

</navigation> 